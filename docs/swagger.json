    "definitions": {
        "expense.CreateExpenseRequest": {
            "type": "object",
            "required": [
                "amount",
                "description",
                "group_id",
                "participants",
                "split_type"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "description": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1
                },
                "group_id": {
                    "type": "integer"
                },
                "image_url": {
                    "type": "string"
                },
                "participants": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/expense.SplitParticipant"
                    }
                },
                "split_type": {
                    "type": "string",
                    "enum": [
                        "EVEN",
                        "PERCENTAGE",
                        "EXACT"
                    ]
                }
            }
        },
        "expense.DisputeSplitRequest": {
            "type": "object",
            "required": [
                "reason"
            ],
            "properties": {
